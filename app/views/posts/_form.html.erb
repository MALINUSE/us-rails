<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group title">
      <%= f.label :title %><br>
      <%= f.text_field :title, id: "title", class: "form-control", placeholder: "Title" %>
    </div><!--//form-group-->
    <div class="form-group body">
      <%= f.label :body %><br>
      <%= f.text_area :body, id: "body", class: "form-control", placeholder: "Dody" %>
    </div><!--//form-group-->
    <%= f.submit :class => "btn btn-theme" %>
<% end %>
